---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = await getCollection('blog');
posts.length = 5;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h2 text-10>Welcome, to the far reaches of space!</h2>
			<p>
				You have arrived at the project site for Cosmo, an opinionated framework for building websites with Web Components.
			</p>
			<h2 text-8>Latest Updates</h2>
			<ul>
				{posts.map((post) => {
					// @ts-ignore
					return <li p-3 bg-sky-100 rounded-2 flex flex-col>
						<h3 text-5>{post.data.title}</h3>
						<p text-4 m-0>{post.data.description}</p>
						<FormattedDate date={post.data.pubDate!}></FormattedDate>
					</li>
				})}
			</ul>
		</main>
		<Footer />
	</body>
</html>
