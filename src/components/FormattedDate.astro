---
import type { HTMLAttributes } from 'astro/types';
type Props = HTMLAttributes<'time'> & {
	date: Date;
} 

const { date } = Astro.props;
---

<time text-4 datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
